---
import { Icon } from "astro-icon/components";

interface Props {
    class?: string;
}

const { class: className = "" } = Astro.props;
---

<div class:list={["navbar", className]}>
    <div class="navbar-start">
        <a slot="start" href="/mon-audit/recherche">
            <Icon class="text-white" name="back" width={18} height={18} />
        </a>
    </div>
    <div class="navbar-end flex gap-4">
        <Icon class="text-white" name="save" width={18} height={18} />
        <Icon class="text-white" name="share" width={18} height={18} />
        <Icon class="text-white" name="cancel" width={18} height={18} />
    </div>
</div>

<style>
    .navbar {
        min-height: min-content;
    }
</style>
