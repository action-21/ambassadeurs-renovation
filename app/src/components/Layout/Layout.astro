	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Ambassadeurs RÃ©nov'</title>
	</head>
	<body class="text-md bg-color">
		<Header class:list={["md:block", { hidden: hideHeaderOnMobile }]} />

		<slot />

